</head>
<body style="background-color: rgb(253, 232, 204);">
    <%- include('./css/homecss.ejs') %>
    <header>
        HULU Mulu Market Order and Buy EVERYTHINg!!
    </header>
    <div id="navBar"> 
                <li ><a href="/customer/me"> <button class="button" onclick="submit" style="list-style: georgian; color: rgb(242, 236, 237);" >Me</button> </a></li>
                <li  > <a href="/customer/commodities"><button class="button"  onclick="submit" style="list-style: georgian; color: rgb(242, 250, 250); ">All</button> </a></li>             
                <li ><a href="/customer/commodities/electronics"> <button class="button"  id="active" onclick="submit"  style="list-style: georgian; color: rgb(242, 250, 250);" >Electronics</button> </a></li>
                <li > <a href="/customer/commodities/boutique"><button class="button"  onclick="submit" style="list-style:georgian; color: rgb(242, 250, 250);">Boutique</button> </a></li>
                <li ><a href="/customer/commodities/cosmotics"> <button class="button"  onclick="submit" style="list-style: georgian; color: rgb(242, 250, 250); ">Cosmotics</button> </a></li>

    </div>
    <% if(data) { %> 
        <%data[0].Products.forEach((elements)=> 
            {%> 
                    <div class="form" >
                        <div class="img">
                            <img alt="notfound" src="data:image/png;base64,<%=elements.picture%>" style=" position:absolute; width:100%;height:100%;">
                        </div>
                        <div class="name">
                            <%=elements.name%>
                        </div>
                        <div class="price">
                            <p>PRICE - <%=elements.price%>  </p> 
                        </div>

                        <form  action="/customer/item/<%=elements.name%>/<%=elements.id%>" method="GET"  class="formItem">
                            <button type="submit"  class="formItem">
                                BUY
                            </button>      
                        </form>
                    </div>
           <%})%>
        <%} %>
</body>
</html>